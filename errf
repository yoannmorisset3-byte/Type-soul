local Players = game:GetService("Players")
local player = Players.LocalPlayer

local function clickYesButton()
    local playerGui = player:WaitForChild("PlayerGui")
    -- Attendre que le GUI de mission apparaisse
    local missionGui = playerGui:WaitForChild("MissionBoard", 5) -- adapte "MissionBoard" si le nom est différent

    if missionGui then
        -- Cherche le bouton "Yes"
        local yesBtn = nil

        for _, obj in pairs(missionGui:GetDescendants()) do
            if obj:IsA("TextButton") and obj.Text:lower():find("yes") then
                yesBtn = obj
                break
            end
        end

        if yesBtn then
            yesBtn:Activate() -- simule un clic sur "Yes"
            print("Bouton Yes cliqué automatiquement.")
        else
            warn("Bouton Yes non trouvé dans la GUI.")
        end
    else
        warn("GUI de mission non trouvée.")
    end
end

-- Exemple d'utilisation après téléportation
local function autoFarmRoutine()
    local character = player.Character or player.CharacterAdded:Wait()
    local hrp = character:WaitForChild("HumanoidRootPart")

    local tpPosition = Vector3.new(-912.0, -20.6, 764.0)
    hrp.CFrame = CFrame.new(tpPosition)
    print("Téléporté à la position : ", tpPosition)

    wait(0.5) -- attendre que le GUI apparaisse
    clickYesButton()
end

-- Pour tester directement
autoFarmRoutine()

