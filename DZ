-- Script local √† mettre dans StarterPlayer > StarterPlayerScripts (pour test Studio)
local gui = Instance.new("ScreenGui", game.Players.LocalPlayer.PlayerGui)
gui.Name = "PetDuplicator"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(1, -20, 0, 50)
button.Position = UDim2.new(0, 10, 0, 75)
button.Text = "üîÅ Dupliquer un pet"
button.TextColor3 = Color3.new(1, 1, 1)
button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 22

button.MouseButton1Click:Connect(function()
    local pet = game.Workspace:FindFirstChild("MyPet")
    if pet then
        local clone = pet:Clone()
        clone.Name = "DuplicatedPet"
        clone.Parent = workspace
        clone.Position = pet.Position + Vector3.new(3, 0, 0)
    else
        warn("Aucun pet nomm√© 'MyPet' trouv√© dans Workspace")
    end
end)
